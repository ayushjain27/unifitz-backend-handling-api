    "config": "^3.3.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "firebase-admin": "^9.10.0",
    "helmet": "^4.5.0",
    "http-status-codes": "^2.1.4",
    "inversify": "^5.0.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.12.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "node-pushnotifications": "^1.7.1",
    "reflect-metadata": "^0.1.13",
