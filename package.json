{
  "name": "service-plug",
  "version": "3.5.1",
  "description": "ServicePlug",
  "author": "JSH",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --config .prettierrc --write **/*.ts",
    "tsc": "tsc  && echo ok || echo not ok",
    "watch-tsc": "tsc -w",
    "deploy": "node dist/server.js",
    "postinstall": "npm run tsc",
    "watch-deploy": "nodemon dist/server.js",
    "server": "concurrently \"npm run watch-tsc\" \"npm run watch-deploy\"",
    "start-js": "npm run deploy",
    "start": "node dist/server.js",
    "start:dev": "NODE_ENV=development PORT=5055 ts-node src/server.ts",
    "local": "NODE_ENV=development nodemon",
    "docker:build:dev": "docker build --build-arg ENV=development --platform linux/amd64 -t serviceplug/serviceplug-dev-api .",
    "docker:build:prod": "docker build --build-arg ENV=production --platform linux/amd64 -t serviceplug/prod-api .",
    "deploy:dev": "./scripts/dev-deploy.sh",
    "deploy:prod": "./scripts/prod-deploy.sh"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.703.0",
    "@aws-sdk/client-ses": "^3.699.0",
    "@aws-sdk/client-sqs": "^3.699.0",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "axios": "^1.7.8",
    "bcryptjs": "^2.4.3",
    "blob-stream": "^0.1.3",
    "config": "^3.3.12",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "fcm-node": "^1.6.1",
    "firebase-admin": "^13.0.1",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.1.4",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "long": "5.2.4",
    "mongoose": "^8.8.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "node-cron": "^3.0.3",
    "node-pushnotifications": "^3.1.1",
    "nodemailer": "^6.9.16",
    "pdfkit": "^0.15.1",
    "razorpay": "^2.9.6",
    "reflect-metadata": "0.2.2",
    "secure-random-password": "^0.2.3",
    "slugify": "^1.6.6",
    "ts-node": "^10.9.2",
    "twilio": "^5.3.6",
    "uuidv4": "^6.2.13",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/config": "3.3.5",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/long": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/reflect-metadata": "^0.0.5",
    "@types/secure-random-password": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2",
    "xls-to-json": "^2.1.1"
  }
}
