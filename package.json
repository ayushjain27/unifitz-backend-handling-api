{
  "name": "service-plug",
  "version": "1.0.0",
  "description": "ServicePlug",
  "author": "JSH",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --config .prettierrc --write **/*.ts",
    "tsc": "tsc  && echo ok || echo not ok",
    "watch-tsc": "tsc -w",
    "deploy": "node dist/server.js",
    "postinstall": "npm run tsc",
    "watch-deploy": "nodemon dist/server.js",
    "server": "concurrently \"npm run watch-tsc\" \"npm run watch-deploy\"",
    "start-js": "npm run deploy",
    "start": "NODE_ENV=production ts-node src/server.ts",
    "start:dev": "NODE_ENV=development PORT=5055 ts-node src/server.ts",
    "local": "nodemon"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/morgan": "^1.9.3",
    "aws-sdk": "^2.1171.0",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "firebase-admin": "^11.0.0",
    "helmet": "^5.1.0",
    "http-status-codes": "^2.2.0",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "long": "4.0.0",
    "mongoose": "^6.4.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "node-pushnotifications": "^2.0.3",
    "reflect-metadata": "^0.1.13",
    "secure-random-password": "^0.2.3",
    "ts-node": "^10.8.2",
    "twilio": "^3.78.0",
    "typescript": "^4.7.4",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "0.0.41",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/long": "4.0.0",
    "@types/multer": "^1.4.7",
    "@types/secure-random-password": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "xls-to-json": "^2.1.1"
  }
